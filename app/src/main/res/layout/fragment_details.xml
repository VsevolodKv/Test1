<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_fragment"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ProgressBar
        android:id="@+id/progressBar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/humidity_text"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"

        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Влажность воздуха (в процентах):"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/humidity"

        android:layout_width="0dp"
        android:layout_height="24dp"

        android:layout_marginStart="8dp"
        android:layout_weight="1"


        android:textColor="@color/colorPrimaryDark"
        android:textSize="8dp"

        app:layout_constraintStart_toEndOf="@+id/humidity_text"
        app:layout_constraintTop_toTopOf="@+id/humidity_text" />

    <TextView
        android:id="@+id/windSpeed_text"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"

        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Скорость ветра (в м/с) :"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humidity_text" />

    <TextView
        android:id="@+id/windSpeed"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_weight="1"

        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintStart_toEndOf="@+id/windSpeed_text"
        app:layout_constraintTop_toTopOf="@+id/windSpeed_text" />

    <TextView
        android:id="@+id/tempMax_text"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"

        android:text="Максимальная температура (°C) :"
        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/windSpeed_text" />

    <TextView
        android:id="@+id/tempMax"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_weight="1"

        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"


        app:layout_constraintStart_toEndOf="@+id/tempMax_text"
        app:layout_constraintTop_toTopOf="@+id/tempMax_text" />

    <TextView
        android:id="@+id/tempMin_text"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"

        android:text="Минимальная температура (°C) :"
        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintStart_toEndOf="@+id/humidity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tempMin"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"

        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintStart_toEndOf="@+id/tempMin_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feelsLike_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_weight="1"

        android:text="Ощущаемая температура (°C) :"
        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintStart_toStartOf="@+id/tempMin_text"
        app:layout_constraintTop_toBottomOf="@+id/tempMin_text" />

    <TextView
        android:id="@+id/feelsLike"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_weight="1"

        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintStart_toEndOf="@+id/feelsLike_text"
        app:layout_constraintTop_toTopOf="@+id/feelsLike_text" />

    <TextView
        android:id="@+id/date_text"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_weight="1"

        android:text="Дата :"
        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintStart_toStartOf="@+id/tempMin_text"
        app:layout_constraintTop_toBottomOf="@+id/feelsLike_text" />

    <TextView
        android:id="@+id/date"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_weight="1"

        android:textSize="8dp"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintStart_toEndOf="@+id/date_text"
        app:layout_constraintTop_toTopOf="@+id/date_text" />

    <Button
        android:id="@+id/backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Назад"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_text" />

</androidx.constraintlayout.widget.ConstraintLayout>